<html>
<div class="card-new-participant">
    <h3 style="text-align:center;">Add participants!</h3>
    <%= simple_form_for [@reunion, @participation] do |f|%>
      <%= f.association :user,
                        collection: User.all.where.not(id: current_user.id),
                        input_html: { multiple: true, class: "associationStyling" },
                        include_blank: false,
                        include_hidden: false %>
      <%= link_to "Go back", :back, { :class => "btn-back" } %>
      <%= f.submit "Add", class: "btn-notify" %>
    <% end %>
</div>
<br>
</html>
